{
	"description": "This schema gives some basic details about the signup data",
	"$schema": "http://json-schema.org/draft-07/schema#", 
	"title": "Base", 
	"type": "object",
	"required": [
		"user"
	],
	"properties": {
		"user": {
			"$id": "user", 
			"title": "User", 
			"type": "object",
            "description": "Contains the data of the user",
            "minProperties":1,
            "maxProperties": 1,
			"additionalProperties": {
				"type": "object",
				"required": [
					"credentials"
				],
				"properties": {
					"credentials": {
						"$id": "credentials", 
						"title": "Credentials",
                        "description": "Contains the email and password of the user", 
						"type": "object",
						"required": [
							"email",
							"password"
						],
						"properties": {
							"email": {
								"$id": "email", 
								"title": "Email", 
								"type": "string",
                                "description": "Email of the user",
								"examples": [
									"test@edsamail.com"
								],
								"format": "email",
                                "pattern": "^\\S+@\\S+\\.\\S+$",
                                "additionalProperties": false
							},
							"password": {
								"$id": "password", 
								"title": "Password", 
								"type": "string",
                                "description": "Password of the user",
								"examples": [
									"pass1234"
								],
								"pattern": "[a-zA-Z0-9]",
                                "minLength": 8,
                                "maxLength": 8,
                                "additionalProperties": false
							}
						},
                        "additionalProperties": false
					}	
			    },
                "additionalProperties": false
		    }
	    }
    },
    "additionalProperties": false
}
