{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Favourite details",
  "description": "This schema gives some basic details about a favourite route",
  "type": "array",
  "items": 
    {
      "type": "object",
      "properties": {
        
        "id": {
          "description": "This is a unique identifier of the route",
          "type": "integer",
          "minimum": 1
        },
        "name": {
          "description": "Name of the route",
          "type": "string",
          "minLength": 5,
          "maxLength": 50
        },
        "places":{
          "description": "Contains the start and end place",
          "type" :"array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "end_id": {
                "description": "This is a unique identifier of the end place",
                "type": "integer",
                "minimum": 1
              },
              "start_id": {
                "description": "This is a unique identifier of the start place",
                "type": "integer",
                "minimum": 1
              }
            },
            "required": [
              "start_id",
              "end_id"
            ],
            "additionalProperties": false
            }
          }
      },
      "required": [
        "id",
        "name"
      ],
      "additionalProperties": false
    }
}