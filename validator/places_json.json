{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Place details",
  "description": "This schema gives some basic details about a place",
  "type": "array",
  "minItems":0,
  "maxItems": 10,
  "items": 
    {
      "type": "object",
      "properties": {
        "coordinates": {
          "description": "This array contains the latitude and longitude",
          "type": "array",
          "minItems":1,
          "maxItems": 1,
          "items": {
            "type" :"object",
            "properties": {
              "latitude":{
                "description": "Place's latitude",
                "type":"number",
                "minimum": -90,
                "maximum": 90
              },
              "longitude":{
                "description": "Place's longitude",
                "type": "number",
                "minimum": -180,
                "maximum": 180
              }
            },
            "required": [
              "latitude",
              "longitude"
            ],
              "additionalItems": false
          }
        },
        "id": {
          "description": "This is a unique identifier for the place",
          "type": "integer",
          "minimum": 1
        },
        "name": {
          "description": "Name of the place",
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ],
      "additionalProperties": false
    }
  
}